<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.upm.gb2s.turistconnect">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ConnectActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".DisseminateService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.mviana.turistconnect.dissemination.START_SERVICE"/>
                <action android:name="com.mviana.turistconnect.dissemination.KILL_SERVICE"/>
                <action android:name="com.mviana.turistconnect.dissemination.ble.RE_SCAN"/>
                <action android:name="com.mviana.turistconnect.dissemination.ble.CONNECT_DEVICE"/>
                <action android:name="com.mviana.turistconnect.dissemination.ble.DISCONNECT_DEVICE"/>
            </intent-filter>
        </service>

        <receiver android:name=".ConnectActivity$DisseminateBroadcastReceiver"
            android:enabled="true"
            android:exported="true"
            android:label="RestartServiceWhenStopped">
        </receiver>
    </application>

</manifest>